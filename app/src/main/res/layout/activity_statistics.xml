<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Statistics">

    <LinearLayout
        android:background="@drawable/box"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:background="@color/green"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country:  "
                android:textSize="18sp"
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/stats_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:textSize="20sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:background="@color/green"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:id="@+id/tvAfforestTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Afforestation Statistics"/>

                <TextView
                    android:layout_below="@id/tvAfforestTitle"
                    android:id="@+id/tvEconomicTree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Economic Trees"/>
                <TextView
                    android:layout_below="@id/tvEconomicTree"
                    android:id="@+id/tvNoOfTreesP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No of Trees Planted: "/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tvNoOfTreesP"
                    android:layout_below="@id/tvEconomicTree"
                    android:id="@+id/tvNoOfTrees"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""/>


                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/tvNoOfTrees"
                    android:id="@+id/tvNEconomicTreeP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Non Economic Trees"/>
                <TextView
                    android:layout_below="@id/tvNEconomicTreeP"
                    android:id="@+id/tvNoOfTreesPlanted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No of Trees Planted: "/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tvNoOfTreesPlanted"
                    android:layout_below="@id/tvNEconomicTreeP"
                    android:id="@+id/tvNoOfTreesN"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "/>


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:background="@color/red"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:id="@+id/tvDeforestationTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Deforestation Statistics"/>

                <TextView
                    android:layout_below="@id/tvDeforestationTitle"
                    android:id="@+id/tvEconomicTreeD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Economic Trees"/>
                <TextView
                    android:layout_below="@id/tvEconomicTreeD"
                    android:id="@+id/tvNoOfTreesPD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No of Trees Reported: "/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tvNoOfTreesPD"
                    android:layout_below="@id/tvEconomicTreeD"
                    android:id="@+id/tvNoOfEcoTreeReported"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "/>
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/tvNoOfEcoTreeReported"
                    android:id="@+id/tvNEconomicTreeD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Non Economic Trees"/>
                <TextView
                    android:layout_below="@id/tvNEconomicTreeD"
                    android:id="@+id/tvNoOfTreesReported"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No of Trees Reported: "/>
                <TextView
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tvNoOfTreesReported"
                    android:layout_below="@id/tvNEconomicTreeD"
                    android:id="@+id/tvNoOfNonEcoReported"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "/>





            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:background="@color/green"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentTop="true"
                    android:id="@+id/tvAllTotalTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:text="Cumulative Total for All Countries"/>


                <TextView
                    android:background="@color/green"
                    android:padding="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/tvAllTotalTitle"
                    android:id="@+id/tvTotalAfforestation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Afforestation"/>
                <TextView
                    android:padding="5dp"
                    android:layout_below="@+id/tvTotalAfforestation"
                    android:id="@+id/tvTextNoAff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Trees Planted: "/>
                <TextView
                    android:padding="5dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tvTextNoAff"
                    android:layout_below="@id/tvTotalAfforestation"
                    android:id="@+id/tvNoAff"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "/>

                <TextView
                    android:background="@color/red"
                    android:padding="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/tvNoAff"
                    android:id="@+id/tvTotaldef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Deforestation"/>
                <TextView
                    android:padding="5dp"
                    android:layout_below="@+id/tvTotaldef"
                    android:id="@+id/tvTextNoDef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Trees Reported: "/>
                <TextView
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:layout_below="@id/tvTotaldef"
                    android:id="@+id/tvNoDef"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@id/tvTextNoDef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "/>
                <TextView
                    android:textAlignment="center"
                    android:id="@+id/tv_volume_co2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:layout_below="@id/tvNoDef"
                    />



            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:background="@color/green"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/view3"/>

        <Button
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/displayAfforestation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Display"
            />

    </LinearLayout>


</ScrollView>
